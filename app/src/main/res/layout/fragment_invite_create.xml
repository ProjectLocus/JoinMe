<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:cardBackgroundColor="#9999ff"
  android:layout_margin="16dp"
  app:cardCornerRadius="16dp">

  <RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
      android:id="@+id/tv_invite_create_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="16sp"
      android:fontFamily="sans-serif-condensed"
      android:text="Create an Invitation"
      android:textAlignment="center"
      android:textSize="40sp"/>

    <EditText
      android:id="@+id/et_invitation_create_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="120dp"
      android:layout_marginBottom="8dp"
      android:layout_centerHorizontal="true"
      android:ems="16"
      android:text="Meet Me for Coffee"
      android:gravity="center"/>

    <EditText
      android:id="@+id/et_invitation_create_location"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:layout_below="@+id/et_invitation_create_title"
      android:layout_centerHorizontal="true"
      android:ems="16"
      android:text="Starbucks"
      android:gravity="center"/>


    <EditText
      android:id="@+id/et_invitation_create_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/et_invitation_create_location"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:layout_centerHorizontal="true"
      android:ems="16"
      android:text="Today at Noon"
      android:gravity="center"/>
    <EditText
      android:id="@+id/et_invitation_create_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/et_invitation_create_date"
      android:layout_marginTop="8dp"
      android:layout_centerHorizontal="true"
      android:ems="16"
      android:text="Come have coffee with me."
      android:gravity="center"/>
    <Button
      android:id="@+id/bt_invitation_done"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="72dp"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:text="Enter"/>

  </RelativeLayout>
</android.support.v7.widget.CardView>