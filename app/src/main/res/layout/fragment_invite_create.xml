<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="48dp">

  <RelativeLayout

      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_invite_create_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16sp"
        android:fontFamily="sans-serif-condensed"
        android:text="Create an Invitation"
        android:textAlignment="center"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/et_invitation_create_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="8dp"
        android:ems="16"
        android:gravity="center"
        android:text="Title"
        android:textColor="@color/blackText"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_invitation_create_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_invitation_create_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ems="16"
        android:gravity="center"
        android:text="Location" />

    <EditText
        android:id="@+id/et_invitation_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_invitation_create_location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ems="16"
        android:gravity="center"
        android:text="Date and Time" />

    <EditText
        android:id="@+id/et_invitation_create_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_invitation_create_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:ems="16"
        android:gravity="center"
        android:text="Description" />

    <Button
        android:id="@+id/bt_invitation_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:text="Enter" />

  </RelativeLayout>
</android.support.v7.widget.CardView>